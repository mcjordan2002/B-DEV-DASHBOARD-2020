<%- include('partials/header'); -%>

<section style="background-image: url('/bg-01.jpg'); min-height: 1000px; width: 100%;min-height: 100vh;display: -webkit-box;display: -webkit-flex;
display: -moz-box;display: -ms-flexbox;display: flex;flex-wrap: wrap;justify-content: center;align-items: center;padding: 15px;background-repeat: no-repeat;background-position: center;
background-position-x: center;background-position-y: center;background-size: cover;">
   <div class="card" style="width: 500px;background: #fff;border-radius: 10px;overflow: hidden;">
    <div class="card-content">
      <div class="row">

        <% include ./partials/messages %>
        <form class="col s12" action="/users/signup" method="POST">
          <h2 class="center-align" style="color: #333333; font-weight: bolder;">Sign up</h2>
          <div class="row">
            <label for="name">Name</label>
            <div class="input-field col s12">
              <input
                type="name"
                id="name"
                name="name"
                value="<%= typeof name != 'undefined' ? name : '' %>"
              />
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <label for="email">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                value="<%= typeof email != 'undefined' ? email : '' %>"
              />
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <label for="password">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                value="<%= typeof password != 'undefined' ? password : '' %>"
              />
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <label for="password2">Confirm Password</label>
              <input
                type="password"
                id="password2"
                name="password2"
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
              />
            </div>
          </div>

          <div class="row">
            <button type="submit" class="btn col s12" style="background: rgb(48,63,159);background: radial-gradient(circle, rgba(48,63,159,1) 0%, rgba(142,36,170,1) 100%); border-radius: 5px;">Sign up</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</section>

<%- include('partials/footer'); -%>